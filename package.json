{
  "license": "MIT",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "test": "jest",
    "lint": "eslint --ext .js,.ts,.tsx .",
    "format": "prettier --write **/*.{js,ts,json,md}",
    "compile": "tsc --noEmit",
    "build": "yarn clean && yarn build:cjs && yarn build:es",
    "clean": "rimraf lib es dist",
    "build:cjs": "tsc --outDir lib",
    "build:es": "tsc --outDir es -m es2015",
    "site": "yarn storybook:build",
    "nojekyll": "shx mkdir -p site && shx touch site/.nojekyll",
    "storybook:dev": "start-storybook -p 6006",
    "storybook:build": "build-storybook --output-dir site/storybook --quiet"
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn compile && lint-staged"
    }
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "yarn lint --cache --fix",
      "yarn test --bail --findRelatedTests"
    ],
    "**/*.{json,md}": [
      "yarn format"
    ]
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@storybook/addon-actions": "^6.0.28",
    "@storybook/addon-knobs": "^6.0.28",
    "@storybook/addon-links": "^6.0.28",
    "@storybook/addon-storysource": "^6.0.28",
    "@storybook/addons": "^6.0.28",
    "@storybook/react": "^6.0.28",
    "@types/jest": "^26.0.15",
    "@typescript-eslint/eslint-plugin": "^4.7.0",
    "@typescript-eslint/parser": "^4.7.0",
    "babel-loader": "^8.2.1",
    "eslint": "^7.13.0",
    "eslint-config-airbnb-typescript": "^12.0.0",
    "eslint-config-prettier": "^6.15.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.1.4",
    "eslint-plugin-react": "^7.21.5",
    "eslint-plugin-react-hooks": "^4.2.0",
    "husky": "^4.2.5",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "shx": "^0.3.3",
    "ts-jest": "^26.4.4",
    "ts-loader": "^8.0.11",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.5"
  },
  "dependencies": {
    "@types/d3-array": "^2.7.0",
    "@types/d3-scale": "^3.2.1",
    "@types/d3-shape": "^2.0.0",
    "d3-array": "^2.5.0",
    "d3-scale": "^3.2.1",
    "d3-shape": "^2.0.0",
    "konva": "^7.1.6",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-konva": "^17.0.0-0",
    "react-spring": "^8.0.27"
  }
}
